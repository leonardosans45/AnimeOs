{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "animeos",
  "version": "0.1.0",
  "identifier": "com.animeos.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "AnimeOs",
        "width": 1280,
        "height": 720,
        "maximized": true,
        "resizable": false,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/proxy",
      "binaries/scraper"
    ]
  }
}